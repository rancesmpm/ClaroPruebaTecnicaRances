@model IEnumerable<FrontEnd.Models.BookViewModel>

@{
    ViewData["Title"] = "List of Book";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                @*<h5 class="card-title">
                                    @item.Name
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>*@
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="" width="100%" alt="@item.Title">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Titulo: </b>@item.Title</p>
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>PageCount: </b>@item.PageCpunt</p>
                            <p class="card-text"><b>Excerpt: </b>@item.Excerpt</p>
                            <p class="card-text"><b>PublishDate: </b>@item.PublishDate.ToString(" dd MM yyyy")</p>
                           

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


